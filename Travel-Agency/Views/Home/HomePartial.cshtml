<div style="display:flex; justify-content:space-between; flex-direction:row;">
    @foreach(var x in Model)
    {
        <div style="width:33vw;">
            <img class="img img-fluid" style="width:300px;height:200px;" src="@x.BlogImageUrl" alt="" />
            <div class="left-text">

                @if (x.Title.Length > 25)
                {
                    <h4>@x.Title.Substring(0, 25)...</h4>
                }
                else
                {
                    <h4>@x.Title</h4>
                }

                @if (x.Description.Length > 65)
                {
                <p>@x.Description.Substring(0,65)...</p>
                }
                else
                {
                <p>@x.Description</p>
                }

                <p><a href="/Blog/Details/@x.Id"><span class="read">Read More >></span></a></p>
            </div>
        </div>
    }
