@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="w-50" style="padding:5rem;">
        <form asp-action="EditBlog" method="post">
            <div class="form-group">
                <label name="Title">Title:</label>
                <div style="height:.5rem;"></div>
                <input name="Title" value="@Model.Title" class="form-control" />
            </div>
            <div style="height:1rem;"></div>
            <div class="form-group">
                <label name="Date">Date:</label>
                <div style="height:.5rem;"></div>
                <input name="Date" value="@Model.Date" class="form-control" />
            </div>
            <div style="height:.5rem;"></div>
            <div class="form-group">
                <label name="BlogImageUrl">Image Url:</label>
                <div style="height:.5rem;"></div>
                <input name="BlogImageUrl" value="@Model.BlogImageUrl" class="form-control" />
            </div>
            <div style="height:1rem;"></div>
            <div class="form-group">
                <label name="Description">Description:</label>
                <div style="height:.5rem;"></div>              
                <textarea name="Description" style="resize:none;" class="form-control">@Model.Description</textarea>
            </div>
            <div style="height:1rem;"></div>
            <button class="btn btn-warning" type="submit">Update Blog</button>
        </form>
    </div>
</div>