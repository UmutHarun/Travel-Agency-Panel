

@{
	Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

<div class="col-md-8 single-main">
	@foreach(var x in Model)
	{
		<div class="single-grid">
			<h1 style="font-weight:700; font-size: 40px; margin-bottom: 20px; margin-top:30px;">@x.Title</h1>
			<img class="w-100" style="height: 400px;" src="@x.BlogImageUrl" alt="" />
			<p>
				@x.Description
			</p>
			<div class="mt-3 mb-3">
				<div>
					<div style="display:flex; justify-content:space-between;">
						<span class="float-end text-muted">@x.Date.ToString("d")</span>
						<a href="/Blog/Details/@x.Id" class="float-end btn btn-danger">Read More</a>
					</div>
				</div>
			</div>
		</div>
	}
</div>